<?xml version="1.0" encoding="utf-8"?>
<com.shopping.hanxiao.shopping.banner.Banner xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/banner"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:delay_time="5000"
    app:image_scale_type="fit_xy">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_marginRight="@dimen/base_padding_one_dp"
        android:background="@color/colorRed"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/desc_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:maxEms="8"
            android:paddingBottom="@dimen/base_padding_one_dp"
            android:paddingLeft="@dimen/base_padding_extra_little"
            android:paddingRight="@dimen/base_padding_extra_little"
            android:paddingTop="@dimen/base_padding_one_dp"
            android:singleLine="true"
            android:text="精品"
            android:textColor="@color/colorWhite" />


        <TextView
            android:id="@+id/price_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxEms="8"
            android:paddingBottom="@dimen/base_padding_one_dp"
            android:paddingLeft="@dimen/base_padding_extra_little"
            android:paddingRight="@dimen/base_padding_extra_little"
            android:paddingTop="@dimen/base_padding_one_dp"
            android:singleLine="true"
            android:textColor="@color/colorWhite" />

    </LinearLayout>

</com.shopping.hanxiao.shopping.banner.Banner>


